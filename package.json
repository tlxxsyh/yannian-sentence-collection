{
  "name": "yannian-sentence-collection",
  "productName": "言念句子库",
  "version": "1.2.0",
  "description": "一款优美句子收藏与漫游软件",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Yuhang <yuhang.shang@qq.com>",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "chart.js": "^4.4.0",
    "csv-parse": "^6.1.0",
    "csv-stringify": "^6.6.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.yuhang.inkwell",
    "productName": "言念句子库",
    "copyright": "Copyright © 2026 Yuhang",
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "言念句子库",
      "deleteAppDataOnUninstall": true
    }
  }
}
